/* pages/goods/goods.wxss */

page {
  background-color: #eee;
}

.header {
  height: 100px;
  border-radius: 0;
  z-index: 9999;
}

.selector {
  display: flex;
  align-items: center;
  color: #fff;
}

.selector text {
  margin-right: 10px;
}

.repo, .types, .status {
  flex: 2;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order {
  flex: 1;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.selector van-icon {
  vertical-align: middle;
}

.order-icon {
  width: 20px;
  height: 20px;
}

.selector-expand {
  width: 100%;
  background-color: #3dbbff;
  color: #fff;
  display: flex;
  top: 100px;
  position: fixed;
  flex-wrap: wrap;
  justify-content: flex-start;
  z-index: 9999;
}

.selector-item {
  width: 50%;
  height: 2em;
  display: flex;
  justify-content: space-around;
}

.selector-item-selected {
  color: #009900;
}

.selector-item-order {
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #fff;
  height: 50px;
  line-height: 50px;
}

.selector-op {
  padding-top: 5px;
  width: 100%;
  margin: 0 auto;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-around;
}

.goods-list {
  margin-top: 110px;
  margin-bottom: 80px;
}

.goods-item {
  width: 95%;
  height: 100px;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 2px 10px 20px 10px #ddd;
  margin: 0 auto;
  margin-top: 10px;
  position: relative;
}

.goods-item image {
  position: absolute;
  left: 5px;
  top: 5px;
  width: 90px;
  height: 90px;
  border-radius: 5px;
}

.goods-name {
  position: absolute;
  top: 5px;
  left: 100px;
  font-weight: bold;
}

.goods-type{
  position: absolute;
  left: 100px;
  top: 23px;
}

.goods-create-time {
  position: absolute;
  left: 100px;
  bottom: 5px;
  color: #bbb;
  font-size: 0.8em;
}

.goods-create-time::before {
  content: '创建时间：';
}

.goods-id {
  position: absolute;
  color: #bbb;
  left: 100px;
  bottom: 20px;
  font-size: 0.8em;
}

.goods-id::before {
  content: 'id：';
}

.goods-amount {
  position: absolute;
  bottom: 5px;
  right: 5px;
}

.goods-amount::before {
  content: '库存：';
}

.goods-price {
  position: absolute;
  font-size: 0.8em;
  bottom: 23px;
  right: 5px;
}

.goods-price::before {
  content: '￥';
}

.goods-repo {
  position: absolute;
  top: 5px;
  right: 5px;
  font-size: 0.8em;
}

.goods-repo-icon {
  vertical-align: middle;
  margin-right: 3px;
}
