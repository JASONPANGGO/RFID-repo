/* pages/goods/goods.wxss */

page {
  background-color: #eee;
}

.header {
  height: 100px;
  border-radius: 0;
}

.selector {
  display: flex;
  align-items: center;
  color: #fff;
}

.selector text {
  margin-right: 10px;
}

.repo, .types, .status {
  flex: 2;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order {
  flex: 1;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.selector van-icon {
  vertical-align: middle;
}

.order-icon {
  width: 20px;
  height: 20px;
}

.selector-expand {
  width: 100%;
  background-color: #3dbbff;
  color: #fff;
  display: flex;
  top: 100px;
  position: fixed;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.selector-item {
  width: 50%;
  height: 2em;
  display: flex;
  justify-content: space-around;
}

.selector-item-selected {
  color: #52c41a;
}

.selector-item-order {
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #fff;
  height: 50px;
  line-height: 50px;
}

.selector-op {
  padding-top: 5px;
  width: 100%;
  margin: 0 auto;
  padding-bottom: 5px;
  display: flex;
  justify-content: space-around;
}
