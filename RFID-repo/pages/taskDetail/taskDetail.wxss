/* pages/taskDetail/taskDetail.wxss */
@import "../preview/preview.wxss";
@import "../bu01-ble/ble.wxss";

page {
  background-color: #eee;
}

.arrow-container {
  position: relative;
  display: flex;
  margin-top: 50rpx;
  width: 700rpx;
  margin: 0 auto;
  height: 420rpx;
}

.goods {
  position: absolute;
  width: 180rpx;
  height: 250rpx;
  top: 50rpx;
  background-color: #fff;
  border-radius: 10px;
  border: 1px solid #eee;
  box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
  padding: 20rpx;
}

.goods image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
}

.goods-name {
  width: 100%;
  margin-top: 10rpx;
}

.arrow {
  position: absolute;
  width: 150rpx;
  height: 200rpx;
  left: 275rpx;
  top: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.arrow .task-type {
  padding: 0 10px;
  font-size: 0.8em;
  background-color: #ddd;
  border-radius: 10px;
  height: 20px;
  line-height: 20px;
  color: #555;
}

.arrow image {
  width: 100%;
  height: 120rpx;
}

.arrow .task-amount {
  height: 28px;
  line-height: 28px;
  font-size: 0.9em;
  border-radius: 14px;
  padding: 0 10px;
}

.repo {
  width: 180rpx;
  height: 250rpx;
  position: absolute;
  right: 0;
  top: 50rpx;
  padding: 20rpx;
  border-radius: 10px;
  box-shadow: 0 10px 10px rgba(18, 150, 219, 0.2);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: linear-gradient(#3dbbff, #1296db);
}

.repo van-icon {
  font-size: 58px;
}

.progress {
  width: 100%;
  text-align: center;
}

.bottom-button {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
}

.bottom-button .abort {
  width: 30%;
}

.bottom-button .finish {
  width: 70%;
}

.bottom-button button {
  width: 100%;
}

.user {
  width: 312rpx;
  margin: 5px auto;
  height: 134rpx;
  border-radius: 10px;
  background-color: #fff;
  box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
  position: relative;
}

.user image.avatar {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 14rpx;
  left: 15rpx;
}

.name {
  position: absolute;
  top: 25rpx;
  right: 22rpx;
  font-size: 0.9em;
}

.character {
  position: absolute;
  right: 23rpx;
  font-size: 0.9em;
  bottom: 26rpx;
  color: #1296db;
}

.character van-icon {
  vertical-align: middle;
}

.user-title {
  width: 100rpx;
  margin: 0 auto;
  font-size: 0.7em;
  color: #aaa;
  text-align: center;
  margin-top: 50rpx;
}

.preview-button {
  width: 180rpx;
  margin: 20px auto;
  text-align: center;
  color: #1296db;
  font-size: 0.8em;
}

.preview-button van-icon {
  vertical-align: middle;
}

.ble-container {
  margin: auto;
  width: 700rpx;
  height: 70vh;
  z-index: 99999999;
}
