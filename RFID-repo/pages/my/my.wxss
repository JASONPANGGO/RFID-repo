/* pages/my.wxss */

page {
  background-color: #eee;
}

.info-container {
  width: 80%;
  height: 180rpx;
  padding-top: 10rpx;
  display: flex;
  justify-content: space-evenly;
  position: relative;
}

.instance-name-tag {
  position: absolute;
  right: 0;
  bottom: 30rpx;
}

.info {
  width: 300rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
}

.repo-container {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}

.repo-new {
  width: 340rpx;
  display: flex;
  justify-content: space-around;
}

.menu-title {
  width: 700rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 12px;
  color: #555;
}

.menu {
  width: 700rpx;
  margin: 0 auto;
  height: auto;
  background-color: #fff;
  border-radius: 10px;
  margin-top: 10rpx;
}
