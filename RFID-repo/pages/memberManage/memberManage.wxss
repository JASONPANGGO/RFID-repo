/* pages/memberManage/memberManage.wxss */

/* vant-weapp 样式 */

.my-sidebar .van-sidebar-item--selected {
  border-color: #1890ff;
}

.header-small-gap {
  height: calc(100vh - 100rpx);
}

.member-list {
  position: absolute;
  top: 100rpx;
  right: 0;
  width: calc(750rpx - 85px);
  height: calc(100vh - 100rpx);
  overflow: scroll;
}

.member-item {
  width: 100%;
  height: 80px;
  position: relative;
}

.member-item::after {
  position: absolute;
  bottom: -1px;
  display: block;
  content: '';
  width: 90%;
  height: 1px;
  background-color: #eee;
  left: 5%;
}

image.avatar {
  width: 50px;
  height: 50px;
  position: absolute;
  left: 10px;
  top: 15px;
}

.member-name {
  position: absolute;
  left: 80px;
  top: 30px;
}

.member-character {
  position: absolute;
  right: 10px;
  top: 30px;
}
