/**app.wxss**/

image.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 5px solid rgba(255, 255, 255, 0.4);
}

.header {
  width: 100%;
  height: 200rpx;
  background-image: linear-gradient(#1296db, #3dbbff);
  border-bottom-right-radius: 20px;
  position: fixed;
  top: 0;
  z-index: 99;
}

.header-gap {
  margin-top: 220rpx;
}

.header-small {
  width: 100%;
  height: 100rpx;
  background-image: linear-gradient(#1296db, #3dbbff);
  border-bottom-right-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  position: fixed;
  top: 0;
  z-index: 99;
}

.header-small-gap {
  margin-top: 100rpx;
}

